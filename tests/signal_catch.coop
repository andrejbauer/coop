(* Catch a signal arising from the body of the use block. *)

signal moo of unit ;;

using
  ({} @ unit) @ ()
in
  moo ()
finally {
| val _ @ _ -> 1
| moo () @ _ -> 2
} ;;

(* Catch a signal arising in a co-operation. *)

operation op : unit -> unit
signal sgl of unit

let demo =
  using
    { op () @ () -> sgl () } unit @ ()
  run
    op ()
  finally {
  | val _ @ _ -> 1
  | sgl () @ _ -> 2
  }

