operation get : unit -> int
operation put : int -> unit

operation get' : unit -> int
operation put' : int -> unit

operation tick : unit -> int

let state =
  runner {
  | get t @ w -> (w, w)
  | put x @ w -> ((), x)
  } @ int

let ticker =
  runner { tick () @ w -> (w, w+1) } @ int

let c = state âŠ— ticker

let demo1 =
  using c @ (10, 0) run
    let a = get () in
    put 2 ;
    let b = tick () in
    let c = tick () in
    put 3 ;
    (a, b, c)
  finally { val x @ w -> (x, w) }

let demo2 =
  using state :*: (state as {get'=get, put'=put}) @ (2, 3) run
    let a = get () in
    put' (a + 3) ;
    put 7 ;
    let b = get' () in
    put' (b + 10) ;
    (a, b)
  finally { val x @ w -> (x, w) }
