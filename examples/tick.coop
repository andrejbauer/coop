(** A counter *)
operation tick : unit -> int

let ticker =
  {
  | tick () @ w -> (w, w+1)
  } @ int
;;

let job (_ : unit) =
  let a = tick () in
  let _ = tick () in
  let b = tick () in
  a + b

let demo =
  using ticker @ 0
  run
    let r1 = job () in
    let r2 = job () in
    (r1, r2)
  finally { return v @ _ -> v }
